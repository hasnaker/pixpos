{
  "name": "@mega-pos/pos",
  "private": true,
  "version": "1.0.0",
  "description": "PIXPOS Kasa - Modern POS Sistemi",
  "author": "PIXPOS",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "cloud.pixpos.pos",
    "productName": "PIXPOS Kasa",
    "copyright": "Copyright Â© 2026 PIXPOS",
    "directories": {
      "output": "electron-dist",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "PIXPOS-Kasa-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PIXPOS Kasa"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.business",
      "artifactName": "PIXPOS-Kasa-${version}.${ext}"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Office",
      "artifactName": "PIXPOS-Kasa-${version}.${ext}"
    }
  },
  "dependencies": {
    "@mega-pos/shared": "workspace:*",
    "@splinetool/react-spline": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.16",
    "lucide-react": "^0.562.0",
    "pdfjs-dist": "^5.4.530",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-image-crop": "^11.0.10",
    "react-router-dom": "^7.12.0",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^4.1.18",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
